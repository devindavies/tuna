{
    "compilerOptions": {
        "target": "es2020",
        "useDefineForClassFields": false,
        "lib": [
            "esnext",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "allowJs": true,
        "removeComments": true
    },
    "include": [
        "src",
        "types",
        "global.d.ts"
    ],
    "exclude": [
        "dist"
    ]
}